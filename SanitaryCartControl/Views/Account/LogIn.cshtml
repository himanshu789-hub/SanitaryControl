@model LogInViewModel

@{
    Layout = "_Initial";
}

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "d-flex justify-content-center" }))
{
    <div class="border rounded w-25 p-2">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>@Html.ValidationSummary()</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="form-group">
            <label>Enter Username</label>
            @Html.TextBoxFor(e=>e.UserName,new {@class="form-control"})
        </div>

        <div class="form-group">
            <label>Enter Password</label>
            @Html.TextBoxFor(e=>e.Password,new {@class="form-control"})
        </div>
        <div>
            <button class="btn btn-success" type="submit">LogIn</button>
        </div>
    </div>
}