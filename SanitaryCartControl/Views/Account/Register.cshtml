@model RegisterViewModel

@using(Html.BeginForm("Register","Account",FormMethod.Post))
{
    <div class="container p-2">
			<div class="row main">
				<div class="main-login main-center">
				<h5>Add User as Manager</h5>
						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">FirstName</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-prepend"><i class="fa fa-user fa fa-1x m-auto p-1" aria-hidden="true"></i></span>
								@Html.TextBoxFor(e=>e.FirstName,"",new {@class="form-control",@placeholder="Enter FirstName"})
								</div>
							</div>
						</div>


						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">LastName</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-prepend"><i class="fa fa-user fa fa-1x m-auto p-1" aria-hidden="true"></i></span>
								@Html.TextBoxFor(e=>e.LastName,"",new {@class="form-control",@placeholder="Enter LastName"})
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="username" class="cols-sm-2 control-label">Username</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-prepend"><i class="fa fa-users fa-1x m-auto p-1" aria-hidden="true"></i></span>
								@Html.TextBoxFor(e=>e.UserName,"",new {@class="form-control",@placeholder="Enter Username"})
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Password</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-prepend"><i class="fa fa-lock fa-lg  fa-1x m-auto p-1" aria-hidden="true"></i></span>
							    @Html.TextBoxFor(e=>e.Password,"",new {@class="form-control",@placeholder="LogIn Password"})
									</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-prepend"><i class="fa fa-lock fa-lg  fa-1x m-auto p-1" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(e=>e.ConfirmPassword,"",new {@class="form-control",@placeholder="Confirm Password"})
								</div>
							</div>
						</div>

						<div class="form-group ">
							<button type="button"   id="registerButton" class="btn btn-primary btn-lg btn-block login-button">Register</button>
						</div>
						
				</div>
			</div>
		</div>

<div class="modal in" id="confirmBox" style="display: none;position: fixed;top:30px">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Please, Not Down Password Before Registering</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to add user</p>
        <div class="row">
            <div class="col-12-xs text-center">
                <button class="btn btn-success btn-md" type="submit" id="yesButton">Yes</button>
                <button class="btn btn-danger btn-md" type="button" id="noButton">No</button>
            </div>
        </div>
      </div>
   
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
}
<script>
	var elements = {
		yesButton:'#yesButton',
		noButton:'#noButton',
        confirmBox:"#confirmBox",
		registerButton:'#registerButton'
	};
	$(elements.noButton).click(function(e)
	{
		$(elements.confirmBox).css("display","none").addClass("slide-bottom");
	});
	$(elements.registerButton).click(function(e){
  $(elements.confirmBox).css("display","block").addClass('slide-bottom');
	})
</script>
<style>
 .slide-bottom {
 -webkit-animation: slide-bottom 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
		 animation: slide-bottom 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
}
@@-webkit-keyframes slide-bottom {
  0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
  100% {
    -webkit-transform: translateY(100px);
            transform: translateY(100px);
  }
}
@@keyframes slide-bottom {
  0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
  100% {
    -webkit-transform: translateY(100px);
            transform: translateY(100px);
  }
}

