@model LogInViewModel
@{
    Layout = "_Initial";
}

<h2 class="font-italic w-100 text-center font-weight-light p-3"><img src="/images/site/icon.png" width="40px" height="40px"/> </h2>

<h2 class="font-italic w-100 text-center font-weight-bold p-3 logInHead">LogIn To @Constants.PortalName</h2>

@using (Html.BeginForm("LogIn", "Account",new {ReturnUrl=Context.Request.Query["returnUrl"].ToString()}, FormMethod.Post,true,new { @class = "d-flex justify-content-center",@spellcheck="false"}))
{

    <div class="w-25">
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show small" role="alert">
                <strong>@Html.ValidationSummary()</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true ">&times;</span>
                </button>
            </div>
        }
        <div class="border rounded   p-3 pt-4" style="background-color: aliceblue">

            <div class="form-group">
                <label>Username</label>
                @Html.TextBoxFor(e=>e.UserName,new {@class="form-control"})
            </div>

            <div class="form-group">
                <label>Password</label>
                @Html.TextBoxFor(e=>e.Password,new {@class="form-control",@type="password"})
            </div>
            <button class="btn btn-success w-100" type="submit">LogIn</button>
        </div>
    </div>

    @section Styles{
    <style>   
        .form-group label{
               font-weight: 500;
           }
    </style>
    }

}