@using SanitaryCartControl.Core.Entities.BLLModels;
@model CategoryBreadcrumbInfo[];

<table class="table table-striped table-hover">
    <thead>
       <tr>
           <th>#</th>
           <th>Breadcrumb</th>
           <th>Image</th>
           <th>Action</th>
       </tr>
    </thead>
    <tbody>
        @for(int position=1;position<=Model.Length;position++)
        {
                CategoryBreadcrumbInfo item = Model[position];
            
           
            <tr>
                <td>@position</td>
                <td>@item.Breadcrumps</td>
                <td><img src="@item.ImagePath" class="border rounded-lg brand img-perfect"/></td>
            </tr>
        }
    </tbody>
</table>

@section Styles
{
    <style>
               img.img-perfect[src='']
               {
                   position:relative;
               }
               img.img-perfect[src='']::after{
                   position:absolute;
                   top:50%;
                   left:50%;
                   transform:translate(-50%,-50%);
                   content:'\f05e';
                   font-family: 'FontAwesome';
                   font-size:20px;
               }
               
    </style>
}
